<!--pages/input/input.wxml-->
<!-- 1.input基本使用 -->
<input></input>
<input/>

<!-- 2.value -->
<input value="hello"></input>

<!-- 3.type: input 的类型 -->
<input type="number"></input>

<!-- 4.password：是否为密码类型 -->
<input password></input>

<!-- 5.placeholder:输入框为空时占位符 -->
<input placeholder="在此输入文字"></input>

<!-- 6.disabled:是否禁用 -->
<input disabled></input>

<!-- 7.confirm-type 设置键盘右下角按钮的文字，仅在type='text'时生效 -->
<input confirm-type='search' type="text"></input>

<!-- 8.input绑定事件 -->
<input bindfocus="handleFocus" bindblur="handleBlur" bindinput="handleInput"></input>